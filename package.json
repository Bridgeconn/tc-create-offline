{
  "name": "tc-create-offline-poc",
  "version": "1.0.0",
  "description": "tc create offline POC using electronite + ReactJs",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "watch": "webpack --config webpack.common.js --watch",
    "build": "webpack --config webpack.prod.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "make:linux": "electron-builder --linux",
    "make:macos": "electron-builder --mac",
    "make:win": "electron-builder --win --x64"
  },
  "author": "Liju <Liju.Jacob@bridgeconn.com>",
  "license": "ISC",
  "build": {
    "productName": "tc-create",
    "appId": "com.uw.tcCreateOffline",
    "extraResources":["src/assets/Resources/**/*","src/assets/images/**/*"],
    "files": [
      "build/**/*",
      "src/**/*",
      "index.html",
      "main.js",
      "src/assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
     
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 430,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Development"
    }
  },
  "dependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-react": "^7.23.3",
    "@electron/remote": "^2.1.1",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "@material-ui/core": "^4.12.4",
    "@material-ui/icons": "^4.11.3",
    "@material-ui/lab": "^4.0.0-alpha.61",
    "@mui/icons-material": "^5.15.12",
    "@mui/material": "^5.15.12",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.9.0",
    "datatable-translatable": "^1.2.4",
    "electronite": "^25.3.2-graphite",
    "markdown-translatable": "^2.1.4",
    "papaparse": "^5.4.1",
    "playwright": "^1.41.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-to-print": "^2.14.15",
    "style-loader": "^3.3.4",
    "uw-tsv-parser": "^1.0.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "devDependencies": {
    "electron": "^25.3.2",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1",
    "webpack-merge": "^5.10.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bridgeconn/tc-create-offline-poc.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/Bridgeconn/tc-create-offline-poc/issues"
  },
  "homepage": "https://github.com/Bridgeconn/tc-create-offline-poc#readme"
}
